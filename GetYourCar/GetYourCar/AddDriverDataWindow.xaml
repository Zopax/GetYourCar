<Window x:Class="GetYourCar.AddDriverDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GetYourCar"
        mc:Ignorable="d"
        Title="Добавить водителя" Height="558" Width="440" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock HorizontalAlignment="Left" FontSize="20"><Run Text="Имя водителя:"/></TextBlock>
            <TextBox  x:Name="fNameDriver" FontSize="18" Opacity="0.65" Text="Введите что нибудь..."/>
            <TextBlock HorizontalAlignment="Left" ><Run FontSize="20" Text="Фамилия "/><LineBreak/><Run FontSize="20" Text="водителя:"/></TextBlock>
            <TextBox  x:Name="lNameDriver" Opacity="0.65" FontSize="18" Text="Введите что нибудь..."/>
            <TextBlock HorizontalAlignment="Left" FontSize="20" Text="Дата рождения:"/>
            <TextBox x:Name="birthDriver"  Opacity="0.65" FontSize="18" Text="Введите что нибудь..."/>
            <Button x:Name="Addriver" Content="Добавить" FontSize="40" Click="Addriver_Click"/>
        </StackPanel>
    </Grid>
</Window>

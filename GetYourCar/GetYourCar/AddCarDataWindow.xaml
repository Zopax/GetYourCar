<Window x:Class="GetYourCar.AddCarDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GetYourCar"
        mc:Ignorable="d"
        Title="Добавить транспорт" Height="551" Width="440" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock HorizontalAlignment="Left" FontSize="20"><Run Text="Название транспорта:"/></TextBlock>
            <TextBox x:Name="NameCar" FontSize="18" Opacity="0.65" Text="Введите что нибудь..."/>
            <TextBlock HorizontalAlignment="Left" Width="143"><Run FontSize="20" Text="Номер:"/></TextBlock>
            <TextBox x:Name="StateNumberCar" Opacity="0.65" FontSize="18" Text="Введите что нибудь..." />
            <TextBlock HorizontalAlignment="Left" FontSize="20" Text="Кол-во мест:"/>
            <TextBox x:Name="NumberPassengersCar" Opacity="0.65" FontSize="18" Text="Введите что нибудь..."/>
            <TextBlock HorizontalAlignment="Left" FontSize="20" Text="Тип траспорта"></TextBlock>
            <ComboBox x:Name="TypeCarCombo" SelectedValuePath="Id" SelectedIndex="0"/>
            <Button x:Name="AddCar" Content="Добавить" FontSize="40" Click="AddCar_Click"/>
        </StackPanel>
    </Grid>
</Window>
